<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BookingTickets</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>



    <style>
        body {
            background-color: #f7f7f7;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
        }

        .sidebar-box {
            border: 2px solid orange;
            border-radius: 6px;
            padding: 15px;
            background-color: #fff;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">BookingTickets</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link" href="/Cart">
                            <i class="bi bi-cart"></i> Cart
                        </a>
                        @await Component.InvokeAsync("CartSummary")
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Admin Panel
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Event">Events</a></li>
                            <li><a class="dropdown-item" href="/Ticket/Create">Create Ticket</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-4">
        <div class="row">

            <aside class="col-12 col-md-3 mb-4 sidebar-box">
                @await Component.InvokeAsync("NavigationMenu")
            </aside>

            <main class="col-12 col-md-9">
                @RenderBody()
            </main>

        </div>
    </div>


    <footer class="bg-dark text-light py-3 mt-4">
        <div class="container text-center">
            © 2025 BookingTickets
        </div>
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>
</html>
