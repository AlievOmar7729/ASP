@model BookingTickets.Models.Event

<div class="col-12 col-md-6 col-lg-4">
    <div class="card h-100 shadow-sm">
        <div class="card-body d-flex flex-column">
            <h4 class="card-title fw-bold">@Model.Title</h4>
            <p class="card-text text-muted">@Model.Description</p>

            <div class="mt-auto">
                <h5 class="text-primary fw-bold">@Model.Price.ToString("c")</h5>
                <a asp-controller="Cart"
                   asp-action="AddToCart"
                   asp-route-eventId="@Model.EventID"
                   class="btn btn-primary w-100 mt-2">
                    Book ticket
                </a>
                <a class="btn btn-outline-secondary w-100 mt-2">Details</a>
            </div>
        </div>
    </div>
</div>
