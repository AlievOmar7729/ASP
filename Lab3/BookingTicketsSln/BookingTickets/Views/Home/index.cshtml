@model BookingTickets.Models.ViewModels.EventsListViewModel

<h2 class="mb-4 fw-bold">Available Events</h2>

<div class="row g-4">
    @foreach (var e in Model.Events)
    {
    <partial name="_EventSummary" model="e" />
    }
</div>

<hr class="my-4" />

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
        {
        <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
            <a class="page-link" href="/Home/Index?page=@i&category=@Model.CurrentCategory">@i</a>
        </li>
        }
    </ul>
</nav>
