@model BookingTickets.Models.Ticket

<h2>Create Ticket</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Seat</label>
        <input asp-for="Seat" class="form-control" />
    </div>

    <div class="form-group">
        <label>Cost</label>
        <input asp-for="Cost" class="form-control" />
    </div>

    <div class="form-group">
        <label>Event</label>
        <select asp-for="EventID" asp-items="@(new SelectList(ViewBag.Events, "EventID", "Title"))" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Create</button>
</form>

