@model IEnumerable<BookingTickets.Models.Ticket>

    <h2>Tickets</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create Ticket</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Seat</th>
                <th>Cost</th>
                <th>Event</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
{
            <tr>
                <td>@t.Seat</td>
                <td>@t.Cost</td>
                <td>@t.Event.Title</td>
                <td>
                    <a asp-action="Details" asp-route-id="@t.TicketID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@t.TicketID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@t.TicketID">Delete</a>
                </td>
            </tr>
}
        </tbody>
    </table>
